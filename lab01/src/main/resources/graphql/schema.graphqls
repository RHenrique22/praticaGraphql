type Query {
    bookById( id: ID ): Book
    getBooks:  [ Book ]
    getAuthors: [ Author ]
    booksByAuthor( name: String ): [ Book ]
}

type Mutation {
    createAuthor( id: ID, firstName: String, lastName: String ): Author
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}